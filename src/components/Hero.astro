---
import CTAButton from "./CTAButton.astro";

interface Props {
  title: string;
  id: string;
  subtitle: string;
  text?: string;
  ctaText: string;
  ctaLink: string;
  hideSecondaryButton?: boolean;
}

const {
  title,
  subtitle,
  ctaText,
  ctaLink,
  text,
  hideSecondaryButton = false,
} = Astro.props;
---

<div
  class='flex w-full min-h-screen px-4 py-4 md:py-16 sm:px-6 lg:px-8'
  id='hero'
>
  <img
    src='/cover.webp'
    alt='Background cover'
    class='absolute justify-start object-contain w-auto h-full pointer-events-none image-hero opacity-60 md:left-0'
    style='mask-image: linear-gradient(blue 20%, transparent );'
  />
  <div
    class='z-10 flex flex-col items-center gap-8 px-4 text-center sm:px-6 lg:px-8 text-hero md:justify-center'
  >
    <h1 class='mb-4 font-bold text-white sm:mb-6'>
      {title}
    </h1>

    <div class='decorative-line'></div>

    <h3 class='subtitle'>
      {subtitle}
    </h3>

    {text && <h4>{text}</h4>}

    <div class='flex flex-col items-center justify-center gap-8 p-8'>
      <CTAButton href={ctaLink} label={ctaText} />

      <h2>
        Domingo 7 de septiembre â€“ <span class='font-bold underline'
          >Cupos limitados</span
        >
      </h2>
    </div>
  </div>
</div>
