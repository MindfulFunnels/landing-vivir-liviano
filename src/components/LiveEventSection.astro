---
interface EventTime {
  country: string;
  time: string;
  flag: string;
}
interface Props {
  title: string;
  subtitle?: string;
  id: string;
  whenWhere: string;
  dateLabel: string;
  date: string;
  timeLabel: string;
  times: EventTime[];
  platformLabel: string;
  importantLabel: string;
  importantText?: string;
}
const {
  title,
  subtitle,
  id,
  whenWhere,
  dateLabel,
  date,
  timeLabel,
  times,
  platformLabel,
  importantLabel,
  importantText,
} = Astro.props;
import EventCard from "./EventCard.astro";
---

<div class='py-24 text-center' id={id}>
  <h2 class='font-bold mb-6 sm:mb-8 md:mb-10 drop-shadow-lg gradient-text'>
    {title}
  </h2>
  <h3
    class='text-xl md:text-2xl text-[var(--color-secondary)] mb-6 sm:mb-8 md:mb-10'
  >
    {subtitle}
  </h3>

  <div class='text-center mb-10'>
    <h3 class='text-lg md:text-xl font-semibold mb-3 uppercase tracking-wide'>
      {dateLabel}
    </h3>
    <p class='text-3xl md:text-4xl font-bold text-[var(--color-secondary)]'>
      {date}
    </p>
  </div>

  <!-- Horarios -->
  <div class='text-center'>
    <h3 class='text-lg md:text-xl font-semibold mb-4 uppercase tracking-wide'>
      {timeLabel}
    </h3>
    <div class='space-y-3'>
      {
        times.map((t) => (
          <div class='flex items-center justify-center gap-4 text-[var(--color-secondary)]'>
            <span class={`${t.flag} w-6 h-4 rounded shadow-sm`} />
            <span class='text-xl md:text-2xl font-bold'>{t.time}</span>
            <span class='text-base md:text-lg text-[--color-secondary]'>
              {t.country}
            </span>
          </div>
        ))
      }
    </div>
  </div>
</div>
