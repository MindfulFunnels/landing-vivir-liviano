---
interface Props {
  href: string;
  label: string;
  class?: string;
  variant?: "primary" | "secondary" | "unirme";
}

const { href, label, class: className, variant = "primary" } = Astro.props;
---

<div class='flex items-center justify-center'>
  <a
    href={href}
    class={`inline-flex text-center items-center justify-center px-6 py-3 font-bold rounded-full transition-all duration-300 text-sm sm:text-base md:text-lg lg:text-xl "hover:shadow-lg focus:outline-none focus:ring-2 focus:ring-[color:var(--color-primary)] focus:ring-offset-2 max-w-xs w-full sm:w-auto mx-auto ${variant === "primary" ? " text-white bg-[color:var(--color-primary)] hover:text-[color:var(--color-primary)] hover:bg-[color:var(--color-primary)/90]" : "text-secondary bg-[color:var(--color-accent)] hover:text-white hover:bg-[color:var(--color-secondary)]"} ${className}`}
  >
    {label}
  </a>
</div>
